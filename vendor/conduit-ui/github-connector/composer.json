{
  "name": "conduit-ui/github-connector",
  "description": "Core GitHub API connector with authentication",
  "keywords": [
    "conduit-ui",
    "github",
    "api",
    "connector"
  ],
  "homepage": "https://github.com/conduit-ui/github-connector",
  "license": "MIT",
  "authors": [
    {
      "name": "Jordan Partridge",
      "email": "jordan.l.partridge@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.2|^8.3|^8.4",
    "saloonphp/saloon": "^3.10"
  },
  "require-dev": {
    "laravel/pint": "^1.14",
    "phpstan/phpstan": "^1.10",
    "nunomaduro/collision": "^7.0||^8.0",
    "pestphp/pest": "^2.34||^3.0",
    "pestphp/pest-plugin-arch": "^2.7||^3.0",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan-deprecation-rules": "^1.1",
    "phpstan/phpstan-phpunit": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "ConduitUi\\GitHubConnector\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ConduitUi\\GitHubConnector\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "analyse": "vendor/bin/phpstan analyse",
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage",
    "format": "vendor/bin/pint"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
